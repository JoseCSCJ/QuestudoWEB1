@model Questudo.Models.Classroom

@{
    ViewData["Title"] = "Deletar";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja deletar essa sala de aula?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome da Sala de Aula
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Instrutor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Instructor.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassroomID" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Voltar para as Salas de Aula</a>
    </form>
</div>
