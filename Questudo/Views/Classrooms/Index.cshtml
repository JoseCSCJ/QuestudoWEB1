@model IEnumerable<Questudo.Models.Classroom>

@{
    ViewData["Title"] = "Index";
}

<h2>Salas de Aula</h2>

<p>
    <a asp-action="Create">Criar nova sala de aula</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassroomID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ClassroomID">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassroomID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
