@model Questudo.Models.Enrolled

@{
    ViewData["Title"] = "Matricular";
}

<h2>Matricular</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label">Estudante</label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClassroomID" class="control-label">Sala de Aula</label>
                <select asp-for="ClassroomID" class ="form-control" asp-items="ViewBag.ClassroomID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Matricular" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista de matrículas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
